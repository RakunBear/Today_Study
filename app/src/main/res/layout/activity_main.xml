<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!--    Main Layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/rankTable"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="20sp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#349E9C8B"
                android:orientation="horizontal"
                android:weightSum="9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Top"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="이름"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="공헌도"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="horizontal"
                android:weightSum="9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="가나다라"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="2000"
                    android:textSize="16sp" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100sp"
            android:layout_marginTop="88sp"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:background="#FFFFFF"
                android:text="Study : App개발"
                android:textColor="#000000"
                android:textSize="30sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="50dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.606"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv : "
                android:textColor="#5C9137"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/level_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#5C9137"
                android:textSize="30sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/level_Progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="196sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.594"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="266sp"
            android:layout_height="203sp"
            android:layout_marginStart="78sp"
            android:layout_marginTop="232sp"
            android:layout_marginEnd="61sp"
            android:src="@drawable/dog_run"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="460sp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#000000"
            android:padding="10sp">

            <ListView
                android:id="@+id/mainLogList"
                android:layout_width="359sp"
                android:layout_height="100sp"
                android:background="#FFFFFF"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
<!--   End Main Layout-->

    <!-- BottomBar  -->

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/bottomBar_Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/dailyBtn"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Daily" />

            <Button
                android:id="@+id/specialBtn"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Special" />

            <Button
                android:id="@+id/talkRoomBtn"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TalkRoom" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomBar_daily"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20sp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Daily Quest"
                android:textColor="#000000"
                android:textSize="30sp" />


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:background="?android:attr/listDivider" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomBar_special"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20sp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Special Quest"
                android:textColor="#000000"
                android:textSize="30sp" />


            <View
                android:id="@+id/divider1_2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:background="?android:attr/listDivider" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

<!--    End BottomBar-->

<!--    SideBar-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/sideBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="0dp"
            android:background="@color/colorAccent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="Management"
                    android:textColor="#000000"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/mg_Daily"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Daily Quest"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/mg_Special"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Special Quest"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/mg_Member"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Study Member"
                    android:textAllCaps="false"/>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="12sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="20sp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="Repository"
                    android:textColor="#000000"
                    android:textSize="25sp"/>

                <Button
                android:id="@+id/mg_Submit"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Submit Quest"
                android:textAllCaps="false"/>

                <Button
                    android:id="@+id/mg_Informantion"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Informantion"
                    android:textAllCaps="false"/>

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="12sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="20sp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="Other"
                    android:textColor="#000000"
                    android:textSize="25sp"/>
                <Button
                    android:id="@+id/mg_StudyManager"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Study List"
                    android:textAllCaps="false"/>

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="12sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="20sp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="Sound"
                    android:textColor="#000000"
                    android:textSize="25sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:background="@drawable/ic_baseline_volume_down_24"
                        android:layout_gravity="center"
                        android:gravity="center" />

                    <SeekBar
                        android:id="@+id/soundBar"
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="5"
                        android:max="10"/>

                    <Button
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:background="@drawable/ic_baseline_volume_up_24"
                        android:layout_gravity="center"
                        android:gravity="center" />
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/sideBar_MenuIn"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="210sp"
                android:background="@color/colorPrimaryDark" />
        </FrameLayout>

        <Button
            android:id="@+id/sideBar_MenuOut"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark" />
    </LinearLayout>


<!--    End SideBar-->

</androidx.constraintlayout.widget.ConstraintLayout>